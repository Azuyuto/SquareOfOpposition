@model SquareOfOpposition.Web.ViewModels.SquareViewModel

<head>
    <link rel="stylesheet" href="~/css/SquareForm.css" asp-append-version="true" />
</head>

@{
    ViewData["Title"] = "View";
}

<h4>@Html.Raw(Model.Id == 0 ? "Add square" : "Edit square " + Model.Id)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" type="color" class="form-control form-control-color" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="sentenceRow">
                <div class="form-group">
                    <label asp-for="SentenceA" class="control-label"></label>
                    <input asp-for="SentenceA" class="form-control" />
                    <span asp-validation-for="SentenceA" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SentenceE" class="control-label"></label>
                    <input asp-for="SentenceE" class="form-control" />
                    <span asp-validation-for="SentenceE" class="text-danger"></span>
                </div>
            </div>
            <img src="@Url.Content("~/images/square.jpg")" alt="" id="square">
            <div class="sentenceRow">
                <div class="form-group">
                    <label asp-for="SentenceI" class="control-label"></label>
                    <input asp-for="SentenceI" class="form-control" />
                    <span asp-validation-for="SentenceI" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SentenceO" class="control-label"></label>
                    <input asp-for="SentenceO" class="form-control" />
                    <span asp-validation-for="SentenceO" class="text-danger"></span>
                </div>
            </div>
            <input asp-for="StateAI.Id" type="hidden" />
            <input asp-for="StateAI.StateType" type="hidden" />
            <input asp-for="StateEO.Id" type="hidden" />
            <input asp-for="StateEO.StateType" type="hidden" />
            <input asp-for="StateIO.Id" type="hidden" />
            <input asp-for="StateIO.StateType" type="hidden" />
            <hr />
            <div class="form-group">
                <input type="submit" value="@Html.Raw(Model.Id == 0 ? "Create" : "Update")" class="btn btn-primary" />
                @if (Model.Id != 0)
                {
                    <a class="btn btn-danger" asp-area="" asp-controller="Square" asp-action="Remove" asp-route-id="@Model.Id">Remove square</a>
                }
            </div>
        </form>
    </div>
</div>
