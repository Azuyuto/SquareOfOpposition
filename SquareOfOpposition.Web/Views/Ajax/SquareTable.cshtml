@using SquareOfOpposition.Web.ViewModels
@model IEnumerable<SquareViewModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var square in Model)
        {
            <tr>
                <td scope="row">@square.Id</td>
                <td>@square.Name</td>
                <td>
                    <a class="text-primary" asp-controller="Square" asp-action="Edit" asp-route-id="@square.Id">Edit</a>
                    |
                    <a class="text-danger" asp-controller="Square" asp-action="Remove" asp-route-id="@square.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" id="addSquare">Add square</a>

<script>
    $("#addSquare").on("click", function(){
        window.location = "/Square/Add?parentStateId=" + (typeof parentStateId !== 'undefined' ? parentStateId : 0);
    });
</script>